{
    "$schema": "../src/scc_cli/schemas/org-v2.schema.json",
    "schema_version": "2.0.0",
    "organization": {
        "name": "Tech Company",
        "id": "tech-company",
        "contact": "platform-team@example.com"
    },
    "security": {
        "blocked_plugins": [
            "deprecated-*",
            "*-malicious"
        ],
        "blocked_mcp_servers": [
            "*.untrusted.com"
        ],
        "blocked_base_images": [
            "*:latest"
        ],
        "allow_stdio_mcp": false
    },
    "defaults": {
        "allowed_plugins": [
            "core-*",
            "shared-*"
        ],
        "network_policy": "unrestricted",
        "session": {
            "timeout_hours": 12,
            "auto_resume": true
        }
    },
    "delegation": {
        "teams": {
            "allow_additional_plugins": [
                "team-*",
                "approved-*"
            ],
            "allow_additional_mcp_servers": [
                "frontend",
                "backend",
                "platform"
            ],
            "allow_network_override": [
                "corp-proxy-only"
            ]
        },
        "projects": {
            "inherit_team_delegation": true
        }
    },
    "profiles": {
        "frontend": {
            "description": "Frontend development team",
            "additional_plugins": [
                "team-react-tools",
                "team-ui-components"
            ],
            "additional_mcp_servers": [
                {
                    "name": "design-system",
                    "type": "sse",
                    "url": "https://mcp.example.com/design-system"
                },
                {
                    "name": "component-docs",
                    "type": "http",
                    "url": "https://docs.example.com/api/mcp"
                }
            ],
            "delegation": {
                "allow_project_overrides": true
            }
        },
        "backend": {
            "description": "Backend services team",
            "additional_plugins": [
                "team-api-tools",
                "team-db-migrations"
            ],
            "additional_mcp_servers": [
                {
                    "name": "api-gateway",
                    "type": "sse",
                    "url": "https://mcp.example.com/api-gateway",
                    "headers": {
                        "X-Team": "backend",
                        "Authorization": "Bearer ${API_TOKEN}"
                    }
                }
            ],
            "network_policy": "corp-proxy-only",
            "delegation": {
                "allow_project_overrides": true
            }
        },
        "platform": {
            "description": "Platform engineering team",
            "additional_plugins": [
                "team-infra-tools",
                "approved-terraform"
            ],
            "session": {
                "timeout_hours": 24
            },
            "delegation": {
                "allow_project_overrides": false
            }
        }
    },
    "stats": {
        "enabled": true,
        "user_identity_mode": "hash",
        "retention_days": 30
    }
}
