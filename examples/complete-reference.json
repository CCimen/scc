{
    "$schema": "../src/scc_cli/schemas/org-v2.schema.json",
    "schema_version": "2.0.0",
    "min_cli_version": "0.5.0",
    "organization": {
        "name": "Reference Organization",
        "id": "reference-org",
        "contact": "docs@example.com"
    },
    "security": {
        "blocked_plugins": [
            "pattern-*",
            "exact-plugin-name",
            "*-suffix"
        ],
        "blocked_mcp_servers": [
            "*.blocked.com",
            "specific-server"
        ],
        "blocked_base_images": [
            "*:latest",
            "*:dev",
            "docker.io/untrusted/*"
        ],
        "allow_stdio_mcp": true,
        "allowed_stdio_prefixes": [
            "/usr/local/bin",
            "/opt/approved-tools"
        ]
    },
    "defaults": {
        "allowed_plugins": [
            "core-*",
            "org-approved-*"
        ],
        "allowed_mcp_servers": [
            "https://mcp.example.com/*"
        ],
        "network_policy": "unrestricted",
        "session": {
            "timeout_hours": 12,
            "auto_resume": true
        }
    },
    "delegation": {
        "teams": {
            "allow_additional_plugins": [
                "team-*",
                "community-*"
            ],
            "allow_additional_mcp_servers": [
                "team-a",
                "team-b",
                "special-team"
            ],
            "allow_network_override": [
                "corp-proxy-only",
                "isolated"
            ]
        },
        "projects": {
            "inherit_team_delegation": true
        }
    },
    "profiles": {
        "team-a": {
            "description": "Example team A with SSE MCP server",
            "additional_plugins": [
                "team-plugin-1",
                "team-plugin-2"
            ],
            "additional_mcp_servers": [
                {
                    "name": "team-a-server",
                    "type": "sse",
                    "url": "https://mcp.example.com/team-a",
                    "headers": {
                        "Authorization": "Bearer ${TEAM_A_TOKEN}",
                        "X-Custom-Header": "value"
                    }
                }
            ],
            "network_policy": "corp-proxy-only",
            "session": {
                "timeout_hours": 8,
                "auto_resume": false
            },
            "delegation": {
                "allow_project_overrides": true
            }
        },
        "team-b": {
            "description": "Example team B with HTTP MCP server",
            "additional_mcp_servers": [
                {
                    "name": "team-b-api",
                    "type": "http",
                    "url": "https://api.example.com/mcp",
                    "headers": {
                        "X-API-Key": "${TEAM_B_API_KEY}"
                    }
                }
            ],
            "delegation": {
                "allow_project_overrides": false
            }
        },
        "special-team": {
            "description": "Team with stdio MCP server (requires allow_stdio_mcp: true)",
            "additional_mcp_servers": [
                {
                    "name": "local-tool",
                    "type": "stdio",
                    "command": "/usr/local/bin/mcp-tool",
                    "args": [
                        "--config",
                        "/etc/mcp/config.yaml",
                        "--verbose"
                    ],
                    "env": {
                        "MCP_HOME": "/opt/mcp",
                        "LOG_FILE": "${HOME}/mcp.log"
                    }
                }
            ],
            "network_policy": "isolated"
        }
    },
    "stats": {
        "enabled": true,
        "user_identity_mode": "hash",
        "retention_days": 365
    }
}
