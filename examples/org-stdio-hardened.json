{
    "$schema": "../src/scc_cli/schemas/org-v2.schema.json",
    "schema_version": "2.0.0",
    "organization": {
        "name": "Local Tools Org",
        "id": "local-tools-org",
        "contact": "admin@example.com"
    },
    "security": {
        "blocked_plugins": [],
        "blocked_mcp_servers": [],
        "blocked_base_images": [
            "*:latest"
        ],
        "allow_stdio_mcp": true,
        "allowed_stdio_prefixes": [
            "/usr/local/bin",
            "/opt/mcp-tools"
        ]
    },
    "defaults": {
        "allowed_plugins": ["*"],
        "network_policy": "unrestricted"
    },
    "delegation": {
        "teams": {
            "allow_additional_plugins": ["*"],
            "allow_additional_mcp_servers": ["*"]
        },
        "projects": {
            "inherit_team_delegation": true
        }
    },
    "profiles": {
        "local-dev": {
            "description": "Team using local stdio MCP servers",
            "additional_mcp_servers": [
                {
                    "name": "local-search",
                    "type": "stdio",
                    "command": "/usr/local/bin/mcp-search",
                    "args": ["--index", "/data/search-index"]
                },
                {
                    "name": "code-analyzer",
                    "type": "stdio",
                    "command": "/opt/mcp-tools/analyzer",
                    "args": ["--format", "json"],
                    "env": {
                        "ANALYZER_CONFIG": "/etc/analyzer.conf",
                        "LOG_LEVEL": "info"
                    }
                }
            ]
        },
        "hybrid": {
            "description": "Team using both local and remote MCP servers",
            "additional_mcp_servers": [
                {
                    "name": "local-linter",
                    "type": "stdio",
                    "command": "/usr/local/bin/mcp-lint"
                },
                {
                    "name": "remote-api",
                    "type": "sse",
                    "url": "https://mcp.example.com/api"
                }
            ]
        }
    }
}
